{% extends 'base.html.twig' %}

{% block title %}Shop Items{% endblock %}

{% block content %}
<style>
    .example-wrapper { margin: 1em auto; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    tr:nth-child(even) {
        background: #dddddd;
    }
    th:nth-child(1) {
        width: 10%;
        text-align: center;
    }
    th:nth-child(2) {
        width: 80%;
    }
    th:nth-child(3) {
        width: 10%;
        text-align: center;
    }
    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }
    table {
        width: 100%;
    }
</style>

<div class="example-wrapper">
    <table>
        <tr>
            <th>Picture</th>
            <th>Description</th>
            <th>Price</th>
        </tr>
        {% for item in items %}
            <tr>
                <td style="text-align: center;"><img src="/img/items/{{ item.id }}.png" alt="{{ item.id }}"></td>
                <td>
                    <p style="margin: 0 0 2px 0; font-weight:700;">{{ item.name }}</p>
                    <p style="margin: 0;">{{ item.desc }}</p>
                </td>
                <td style="text-align: center;">{{ item.price }}</td>
            </tr>
        {% endfor %}
    </table>
</div>
