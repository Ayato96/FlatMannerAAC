{% extends 'base.html.twig' %}

{% block title %}Account{% endblock %}

{% block content %}
<style>
    .example-wrapper { 
        margin: 1em auto; 
         
        width: 95%; 
        font: 18px/1.5 sans-serif;
        display: grid;
        grid-template-columns: 50% 50%;
        grid-gap: 30px;
        }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }

        tr:nth-child(even) {
        background: #dddddd;
    }
    th:nth-child(3) {
        width: 1%;
    }
    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }
    table {
        width: 100%;
        border-spacing: 0;
    }
    .actions {
        display: inline-block;
        width: 40%;
        margin-left: 20px;
    }
    .actions > div > a {
        display: block;
        font-size: 14px;
    }
    .char_list {
        display: inline-block;
        width: 100%;
    }
    .admin_panel {
        grid-column: span 2;
    }
</style>

<div class="example-wrapper">
    <h1 style="grid-column: span 2;">Account</h1>
    <div class="char_list">
        <p>Character List</p>
        <p><strong>Premium Points: </strong>{{ account.points }}</p>
        <table>
            <tr>
                <th style="width: 250px;">Name</th>
                <th>Level</th>
                <th>Vocation</th>
            </tr>
        {% for character in accountChars %}
            <tr>
                <td><a href="/player/{{ character.name }}">{{ character.name }}</a></td>
                <td style="text-align: center;">{{ character.level }}</td>
                <td style="text-align: center;">{{ vocations[character.vocation] }}</td>
            </tr>
        {% endfor %}
        </table>
    </div>
    
    <div class="actions">
        <p>Actions List</p>
        <div>
            {% if account.groupid >= 7  %}
                <a href="/admin">Admin Panel</a>
            {% endif %}
            <a href="/account/create/character">Create Character</a>
            <a href="/account/change/password">Change password</a>
            <a href="/account/change/email">Change email</a>
            <a href="/account/logout">Logout</a>
        </div>

    </div>


</div>
{% endblock %}
