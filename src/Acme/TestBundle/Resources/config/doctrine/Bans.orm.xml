<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="App\Acme\TestBundle\Entity\Bans" table="bans">
    <indexes>
      <index name="type" columns="type,value"/>
      <index name="active" columns="active"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="type" type="boolean" column="type" nullable="false">
      <options>
        <option name="comment">1 - ip banishment, 2 - namelock, 3 - account banishment, 4 - notation, 5 - deletion</option>
      </options>
    </field>
    <field name="value" type="integer" column="value" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">ip address (integer), player guid or account number</option>
      </options>
    </field>
    <field name="param" type="integer" column="param" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">used only for ip banishment mask (integer)</option>
        <option name="default">4294967295</option>
      </options>
    </field>
    <field name="active" type="boolean" column="active" nullable="false">
      <options>
        <option name="default">1</option>
      </options>
    </field>
    <field name="expires" type="integer" column="expires" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="added" type="integer" column="added" nullable="false">
      <options>
        <option name="unsigned">1</option>
      </options>
    </field>
    <field name="adminId" type="integer" column="admin_id" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="comment" type="text" column="comment" length="65535" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="reason" type="integer" column="reason" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="action" type="integer" column="action" nullable="false">
      <options>
        <option name="unsigned">1</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="statement" type="string" column="statement" length="255" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="default"/>
      </options>
    </field>
  </entity>
</doctrine-mapping>
